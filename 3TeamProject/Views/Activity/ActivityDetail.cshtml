    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                CategoryName: '',
                SightseeingAddress: '',
                SightseeingCity: '',
                SightseeingCountry: '',
                SightseeingId: '',
                SightseeingMessageBoards: [],
                SightseeingName: '',
                SightseeingPictureInfos: [],
                SightseeingScore: '',
                SightseeingMessageContent: '',
                SightseeingIntroduce: '',
                ErrMsg: '',
                Success: '',
                ActivityId:5,
                ActivitiesMessageContent:''

            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Sightseeings/SightseeingApi/5'
                })
                    .then(function (res) {
                        console.log(res);
                        self.CategoryName = res.data.categoryName;
                        self.SightseeingAddress = res.data.sightseeingAddress;
                        self.SightseeingCity = res.data.sightseeingCity;
                        self.SightseeingCountry = res.data.sightseeingCountry;
                        self.SightseeingId = res.data.sightseeingId;
                        self.SightseeingMessageBoards = res.data.sightseeingMessageBoards;
                        self.SightseeingName = res.data.sightseeingName;
                        self.SightseeingPictureInfos = res.data.sightseeingPictureInfos;
                        self.SightseeingScore = res.data.sightseeingScore;
                        self.SightseeingIntroduce = res.data.sightseeingIntroduce;
                    })
                    .catch(function (error) {
                        console.log(error);
                    })
            },
            methods: {
                submitdata: function () {
                    var self = this;
                    axios({
                        method: 'post',
                        url: '/Sightseeings/SightseeingApi/PostMessage',
                        data: {
                            ActivityId: self.ActivityId,
                            ActivitiesMessageContent: self.ActivitiesMessageContent
                        }
                    })
                        .then(function (res) {
                            self.CategoryName = res.data.categoryName;
                            self.SightseeingAddress = res.data.sightseeingAddress;
                            self.SightseeingCity = res.data.sightseeingCity;
                            self.SightseeingCountry = res.data.sightseeingCountry;
                            self.SightseeingId = res.data.sightseeingId;
                            self.SightseeingMessageBoards = res.data.sightseeingMessageBoards;
                            self.SightseeingName = res.data.sightseeingName;
                            self.SightseeingPictureInfos = res.data.sightseeingPictureInfos;
                            self.SightseeingScore = res.data.sightseeingScore;
                            self.SightseeingIntroduce = res.data.sightseeingIntroduce;
                            console.log(res);
                        })
                        .catch(function (error) {
                            self.ErrMsg = error.response.data;
                            Swal.fire({
                                title: '留言失敗',
                                text: self.ErrMsg,
                                icon: 'error',
                                timer: 12000
                            });
                            console.log(error);
                            return;
                        });
                }
            }
        });

    </script>
    }
