    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                OrderId:'',
                OrderDate:'',
                ShipDate:'',
                OrderCategoryName:'',
                PaymentCategoryName:'',
                ShipCategoryName:'',
                ShipCategoryName:'',
                OrderDetails:[],
                PicturePath:'',
                NickName: '',
                ErrMsg: '',
                Success: ''
            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Members/MemberApi/GetMember'
                })
                .then(function (res) {
                    var r = res.data;
                    console.log(res);
                    self.PicturePath = r.PicturePath;
                    self.NickName = r.nickName;
                })
                .catch(function (error) {
                    console.log(error);
                }),
                function(){
                    var self = this;
                        axios({
                            method: 'get',
                            url: '/Members/MemberApi/GetOrder'
                        })
                            .then(function (res) {
                                var r = res.data;
                                console.log(res);
                                self.PicturePath = r.PicturePath;
                                self.NickName = r.nickName;
                            })
                            .catch(function (error) {
                                console.log(error);
                            }),
                }

            }
        });

    </script>
    }