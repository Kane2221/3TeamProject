    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                Account: '',
                Email: '',
                Password: '',
                MemberName: '',
                NickName: '',
                Birthday: '',
                IdentityNumber: '',
                CellPhoneNumber: '',
                PhoneNumber: '',
                PostalCode: '',
                Country: '台灣',
                City: '',
                Address: '',
                ErrMsg: '',
                Success: ''
                
            },
            mounted: function () {
                    var self = this;
                    axios({
                    method: 'get',
                    url: '/Members/MemberApi/GetMember'
                    })
                    .then(function (res) {
                        var r = res.data;
                        console.log(res);
                        self.Account = r.account;
                        self.Email = r.email;
                        self.Password = r.password;
                        self.MemberName = r.memberName;
                        self.NickName = r.nickName;
                        self.Birthday = r.birthday;
                        self.IdentityNumber = r.identityNumber;
                        self.CellPhoneNumber = r.cellPhoneNumber;
                        self.PhoneNumber = r.phoneNumber;
                        self.PostalCode = r.postalCode;
                        self.Country = r.country;
                        self.City = r.city;
                        self.Address = r.address;
                    })
                    .catch(function (error) {
                        console.log(error);
                    })

            }
        });

    </script>
    }