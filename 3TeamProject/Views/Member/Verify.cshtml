@section Head{
    <title>Login 04</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/stylelogin.css">
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
}
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(../img/login.jpg);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">帳號驗證</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fab fa-facebook-f"></span></a>
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fab fa-google"></span></a>
                                </p>
                            </div>
                        </div>
                        <div id="VuePage">
                            <form v-on:submit.prevent="SubmitData" class="fgpwd-form">
                                <div class="form-group mb-5">
                                    <label class="label" for="text">請輸入驗證碼</label>
                                    <input type="text" v-model.lazy="Token" class="form-control" placeholder="驗證碼" required>
                                </div>
                                <div class="form-group mb-5">
                                    <label class="label" for="text">請輸入帳號</label>
                                    <input type="text" v-model.lazy="Account" class="form-control" placeholder="帳號" required>
                                </div>
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="button" class="btn btn-outline-primary rounded px-3" v-on:click="cancel">取消</button>
                                <button type="submit" class="btn btn-primary rounded submit px-3" v-bind:disabled="isDisabled">送出</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        @section scripts {
        <script>
        var querystring = window.location.search.substring(1);
        var tokenvalue = querystring.split("=");
            var VuePage = new Vue({
                el: "#VuePage",
                data: {
                    Token: this.tokenvalue[1],
                    Account: '',
                    ErrMsg: '',
                    Success: '',
                    isDisabled: false
                },
                methods: {
                    SubmitData: function () {
                        var self = this;
                        this.isDisabled = true;
                        axios({
                            method: 'post',
                            url: '/Users/UserApi/Verify',
                            data: {
                                Token: this.Token,
                                Account: this.Account
                            }
                        })
                            .then(function (response) {
                                self.Success = response.data;
                                self.isDisabled = false;
                                Swal.fire({
                                    title: self.Success,
                                    icon: 'success',
                                    timer: 12000
                                }).then((result => {
                                window.location.assign("/Member/MemberProfile")
                                }));
                                console.log(response);
                                
                            })
                            .catch(function (error) {
                                self.ErrMsg = error.response.data;
                                Swal.fire({
                                    title: '失敗',
                                    text: self.ErrMsg,
                                    icon: 'error',
                                    timer: 12000
                                });
                                console.log(error);
                                self.isDisabled = false;
                                return;
                            });
                    },
                    cancel: function () {
                        window.location.assign("/Member/Login");
                    }
                }
            });

        </script>
    }

