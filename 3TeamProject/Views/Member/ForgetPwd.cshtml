@section Head{
	<title>Login 04</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/css/stylelogin.css">
	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/css/style.css" rel="stylesheet">
}
<body>
<div class="row justify-content-center">
	<div class="col-md-12 col-lg-10">
		<div class="wrap d-md-flex">
			<div class="img" style="background-image: url(../img/login.jpg);">
			</div>
			<div class="login-wrap p-4 p-md-5">
				<div class="d-flex">
					<div class="w-100">
						<h3 class="mb-4">忘記密碼</h3>
					</div>
						<div class="w-100">
							<p class="social-media d-flex justify-content-end">
								<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fab fa-facebook-f"></span></a>
								<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fab fa-google"></span></a>
							</p>
						</div>
				</div>
					<form action="#" class="fgpwd-form">
							<div class="form-group mb-5">
								<label class="label" for="email">請輸入電子郵件</label>
								<input type="text" class="form-control" placeholder="電子郵件" required>
							</div>
							<div class="d-grid gap-2 d-md-flex justify-content-md-end">
							<button type="button" class="btn btn-outline-primary rounded px-3" href="/Member/Register">取消</button>
								<button type="submit" class="btn btn-primary rounded submit px-3">送出</button>
							</div>

					</form>

				
            </div>
        </div>
    </div>
</div>

</body>
</html>
