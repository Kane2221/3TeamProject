@{
    Layout = "_Backstage";
}
@section Head{
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    </head>
}


    <div id="page-wrapper">
        <div id="page-inner" style="margin-top:0px">

            <div id="VuePage" class="row">
                <div class="col-md-12">
                    <!-- Advanced Tables -->
                    <div class="card">
                        <div class="card-action">
                            <div class=" mb-3">
                                <h2>會員清單</h2>
                            </div>
                            <div style="float: right;">
                                <button class="px-5" style="float: right;">修改資料</button>
                                <button class="px-5" style="float: right;">刪除資料</button>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="table-responsive dataTables_scrollFoot " >
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>會員編號</th>
                                            <th>姓名</th>
                                            <th>帳號</th>
                                            <th>密碼</th>
                                            <th>暱稱</th>
                                            <th>生日</th>
                                            <th>身份證字號</th>
                                            <th>電子信箱</th>
                                            <th>手機號碼</th>
                                            <th>電話號碼</th>
                                            <th>郵遞區號</th>
                                            <th>國家</th>
                                            <th>城市</th>
                                            <th>地址</th>
                                            <th>狀態</th>
                                        </tr>
                                    </thead>
                                    <tbody v-for="mem in Members">
                                        <tr class="text-center">
                                            <td><a herf="">#{{mem.userId}}</a></td>
                                            <td>{{mem.memberName}}</td>
                                            <td>{{mem.account}}</td>
                                            <td>********</td>
                                            <td>{{mem.nickName}}</td>
                                            <td>{{mem.birthday}}</td>
                                            <td>{{mem.identityNumber}}</td>
                                            <td>{{mem.email}}</td>
                                            <td>{{mem.cellPhoneNumber}}</td>
                                            <td>{{mem.phoneNumber}}</td>
                                            <td>{{mem.postalCode}}</td>
                                            <td>{{mem.country}}</td>
                                            <td>{{mem.city}}</td>
                                            <td>{{mem.address}}</td>
                                            <td>{{mem.memberStatus}}</td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                    <!--End Advanced Tables -->
                </div>
            </div>

        </div>
    </div>

    @section Scripts{
    <!-- DATA TABLE SCRIPTS -->
    <script src="~/assets/js/dataTables/jquery.dataTables.js"></script>
    <script src="~/assets/js/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                Members: [],
                ErrMsg: '',
                Success: '',
            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Administrators/AdministratorApi/GetAlltMember'
                })
                    .then(function (res) {
                        console.log(res);
                        self.Members = res.data;
                    })
                    .catch(function (error) {
                        console.log(error);
                    });
            },
            methods: {
                logOut: function () {
                    axios({
                        method: 'delete',
                        url: '/Users/UserApi/Logout'
                    })
                        .then(function (res) {
                            console.log(res);
                        })
                        .catch(function (error) {
                            console.log(error);
                        });
                    window.location.assign("/home");
                }
            }
        });

    </script>



    }


