<!-- Shop Detail Start -->
<br />
<br />
<div id="rating" v-for="item in products">
    <div class="container-fluid col-8 ">
        <div id="carousel-atraction" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="imgsrc" :src="item.productPicturePath" alt="Image">
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="~/img/carousel-2.jpg" alt="Image">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel-atraction" data-slide="prev">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-prev-icon mb-n2"></span>
                </div>
            </a>
            <a class="carousel-control-next" href="#carousel-atraction" data-slide="next">
                <div class="btn btn-dark" style="width: 45px; height: 45px;">
                    <span class="carousel-control-next-icon mb-n2"></span>
                </div>
            </a>
            <br />
            <div class="justify-content-center mb-5">
                <h3>{{item.productName}}</h3>
            </div>
        </div>
    </div>
    <div class="container-fluid col-8">
        <div class="justify-content-end"><h5>評分及評論</h5></div>
        <hr />
        <form>
            <div class="d-flex my-2">
                <p class="mb-0 mr-2">我的評分 :</p>
                <div class="text-primary">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                </div>
            </div>
            <div class="form-group">
                <label for="message">我的評論：</label>
                <textarea id="message" cols="15" rows="4" class="form-control"></textarea>
            </div>
            <div class="form-group mb-0">
                <input type="submit" value="確認送出" class="btn btn-primary px-3">
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/vue@2.7.10/dist/vue.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    //Vue.use(VueNumberInput);
    //Vue.component('vue-number-input', VueNumberInput);
    let app = new Vue({
        el: "#rating",
        data: {
            products: []
        },
        mounted: function () {
            let self = this;
            fetch("/api/Product/2")
                //fetch("/api/Product/")
                .then(res => res.json())
                .then(data => (this.products = data))
        }
    })

</script>