@section Head{
        <meta charset="utf-8">
        <title>ShopIndex</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="Free HTML Templates" name="keywords">
        <meta content="Free HTML Templates" name="description">
        <link href=https://cdnjs.cloudflare.com/ajax/libs/vue/3.2.41/vue.cjs.js>
        <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
}
    <div id="VuePage">
        <!-- Search Bar Start -->
        <div class="container-fluid" style="background-color:#2f4f4f;">
            <div class="row align-items-center justify-content-center py-3 px-xl-5">
                <div class="col-lg-6 col-6 text-left ">
                    <form action="">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="搜尋景點">
                            <div class="input-group-append">
                                <span class="btn input-group-text bg-transparent text-primary">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Search Bar End -->
        <br />
        <br />
        <!-- Carousel Start -->
        <div class="container-fluid col-8 ">
            <div id="carousel-atraction" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100" src="~/img/carousel-2.jpg" alt="Image">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel-atraction" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#carousel-atraction" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            </div>
        </div>
        <!-- Carousel End -->
        <br />
        <!-- Description Start -->
        <div class="container-fluid col-8">
            <div class="accordion" id="accordionPanelsStayOpenExample">
                <div class="accordion-item">
                    <div class="accordion-header" id="panelsStayOpen-headingOne">
                        <button class="accordion-button btn collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                            <h4>
                                {{'#'+SightseeingId+'_'+SightseeingName}}
                                <i class="zmdi zmdi-chevron-up"></i>
                            </h4>
                        </button>
                    </div>
                </div>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                    <div class="accordion-body">
                        <p>{{SightseeingIntroduce}}</p>
                        <p>{{SightseeingCountry +', '+ SightseeingCity +', '+ SightseeingAddress}}</p>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />

        <div class="container-fluid col-8">
            <div class="justify-content-end"><h5>評分及評論</h5></div>
            <hr />
            <form v-on:submit.prevent="postmsg">
                <div class="d-flex my-2">
                    <p class="mb-0 mr-2">我的評分 :</p>
                    <div class="text-primary">
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                        <i class="far fa-star"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message">我的評論：</label>
                    <textarea id="message" cols="15" rows="2" class="form-control" v-model.lazy="SightseeingMessageContent"></textarea>
                </div>
                <div class="form-group mb-0">
                    <input type="submit" value="確認送出" class="btn btn-primary px-3">
                </div>
            </form>
            <br />
            <br />
            <br />
            <div class="justify-content-end"><h5>景點評價</h5></div>
            <hr />
            <div v-for="msg in SightseeingMessageBoards" class="media mb-4">
                <img src="/img/team-3.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                <div class="media-body">
                    <h6>{{msg.account}}<small> - <i>{{msg.messageCreatedTime}}</i></small></h6>
                    <div class="text-primary mb-2">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <i class="far fa-star"></i>
                    </div>
                    <p>{{msg.sightseeingMessageContent}}</p>
                </div>
            </div>
        </div>
</div>
    
    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                CategoryName:'',
                SightseeingAddress:'',
                SightseeingCity:'',
                SightseeingCountry:'',
                SightseeingId:'',
                SightseeingMessageBoards:[],
                SightseeingName:'',
                SightseeingPictureInfos:[],
                SightseeingScore:'',
                SightseeingMessageContent:'',
                SightseeingIntroduce: '',
                ErrMsg: '',
                Success: ''
            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Sightseeings/SightseeingApi/@ViewBag.Sight'
                })
                .then(function (res) {
                    console.log(res);
                        self.CategoryName = res.data.categoryName;
                        self.SightseeingAddress = res.data.sightseeingAddress;
                        self.SightseeingCity = res.data.sightseeingCity;
                        self.SightseeingCountry = res.data.sightseeingCountry;
                        self.SightseeingId = res.data.sightseeingId;
                        self.SightseeingMessageBoards = res.data.sightseeingMessageBoards;
                        self.SightseeingName = res.data.sightseeingName;
                        self.SightseeingPictureInfos=res.data.sightseeingPictureInfos;
                        self.SightseeingScore = res.data.sightseeingScore;
                        self.SightseeingIntroduce = res.data.sightseeingIntroduce;
                })
                .catch(function (error) {
                    console.log(error);
                })
            },
            methods:{
                postmsg:function(){
                    var self = this;
                    axios({
                        method: 'post',
                        url: '/Sightseeings/SightseeingApi',
                        data: {
                            SightseeingId : self.SightseeingId,
                            SightseeingMessageContent : self.SightseeingMessageContent
                        }
                    })
                        .then(function (res) {
                            console.log(res);
                            Swal.fire({
                                title: '已成功留言',
                                icon: 'success',
                                timer: 12000
                            });
                        })
                        .catch(function (error) {
                            self.ErrMsg = error.response.data;
                            Swal.fire({
                                title: '留言失敗',
                                text: self.ErrMsg,
                                icon: 'error',
                                timer: 12000
                            });
                            console.log(error);
                            return;
                        });
                }
            }
        });

    </script>
    }
