			var VuePage = new Vue({
                el: "#VuePage",
                data: {
                    Account: '',
                    Password: '',
                    ErrMsg:'',
                    Success:''
                },
                methods: {
                    confirm: function () {
                        var self = this;
                        axios({
                        method: 'post',
                        url: '/Users/UserApi/Login',
                        data: {
                            Account: self.Account,
                            Password: self.Password
                            }
                        })
                        .then(function (response) {
                            self.Success = response.data;
                            Swal.fire({
                                title: self.Success,
                                icon: 'success',
                                timer: 12000
                                }).then((result =>{
                                    window.location.assign("/home")
                            }));
                            console.log(response);
                        })
                        .catch(function (error) {
                                self.ErrMsg = error.response.data;
                                Swal.fire({
                                    title: '登入失敗',
									text: self.ErrMsg,
                                    icon: 'error',
                                    timer: 12000
                                });
                                console.log(error);
                                return;
                        });
                    }, 
                }
            });
