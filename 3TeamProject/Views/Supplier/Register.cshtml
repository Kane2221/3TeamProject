                                            <option value="嘉義市">嘉義市</option>
                                            <option value="新竹縣">新竹縣</option>
                                            <option value="苗栗縣">苗栗縣</option>
                                            <option value="彰化縣">彰化縣</option>
                                            <option value="雲林縣">雲林縣</option>
                                            <option value="嘉義縣">嘉義縣</option>
                                            <option value="屏東縣">屏東縣</option>
                                            <option value="台東縣">台東縣</option>
                                            <option value="花蓮縣">花蓮縣</option>
                                            <option value="屏東縣">屏東縣</option>
                                            <option value="宜蘭縣">宜蘭縣</option>
                                            <option value="南投縣">南投縣</option>
                                        </select>
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-home"> 地址</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="請輸入地址(必填)" class="form-control" v-model.lazy="Address" required>
                                    </div>
                                </div>
                                <hr>
                                <div class="d-grid gap-2 d-md-flex justify-content-center">
                                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" v-model="isChecked" />
                                    <label for="agree-term" class="align-self-end col-sm-3 label-agree-term">我同意 <a href="#" class="term-service">隱私權政策</a></label>
                                    <button type="submit" class="form-control btn btn-outline-primary rounded submit px-3" v-on:click="SubmitData">
                                        註冊
                                        <i class="zmdi zmdi-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                Account:'',
                Email: '',
                Password: '',
                ComfirmPassword: '',
                ContactName: '',
                CompanyName: '',
                TaxId: '',
                Fax: '',
                CellPhoneNumber: '',
                SupplierPhoneNumber: '',
                PostalCode: '',
                Country: '台灣',
                City:'',
                Address: '',
                isChecked: false,
                ErrMsg: '',
                Success: ''
            },
            methods: {
                SubmitData: function () {
                    var self = this;
                    if (self.isChecked == false) {
                        Swal.fire({
                            title: '註冊失敗',
                            text: '請勾選隱私權政策',
                            icon: 'error',
                            timer: 12000
                        });
                        return;
                    }
                    axios({
                        method: 'post',
                        url: '/Suppliers/SupplierApi/Register',
                        data: {
                            Account: self.Account,
                            Email: self.Email,
                            Password: self.Password,
                            ComfirmPassword: self.ComfirmPassword,
                            ContactName: self.ContactName,
                            CompanyName: self.CompanyName,
                            TaxId: self.TaxId,
                            Fax: self.Fax,
                            CellPhoneNumber: self.CellPhoneNumber,
                            SupplierPhoneNumber: self.SupplierPhoneNumber,
                            SupplierPostalCode: self.PostalCode,
                            SupplierCountry: self.Country,
                            SupplierCity: self.City,
                            SupplierAddress: self.Address,
                            ErrMsg: '',
                            Success: ''
                        }
                    })
                        .then(function (response) {
                            self.Success = response.data;
                            Swal.fire({
                                title: self.Success,
                                icon: 'success',
                                timer: 12000
                            }).then((result => {
                                window.location.assign("/Supplier/Verify")
                            }));
                            console.log(response);
                        })
                        .catch(function (error) {
                            self.ErrMsg = error.response.data;
                            Swal.fire({
                                title: '註冊失敗', // TODO 驗證需修改
                                text: '請填入選項',
                                icon: 'error',
                                timer: 12000
                            });
                            console.log(error);
                            return;
                        });
                },
            }
        });

    </script>
    }