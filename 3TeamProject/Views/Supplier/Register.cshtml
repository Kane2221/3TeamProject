@section Head{
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
}
    <div class="container-fluid page-header">
        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 500px">
                <h3 class="display-4 text-white text-uppercase">廠商註冊</h3>
                <div class="d-inline-flex text-white">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid booking mt-5 pb-5">
        <div class="container pb-5">
            <div class="bg-light shadow" style="padding: 30px;">
                <div class="row align-items-center" style="min-height: 500px;">

                    <div class="row justify-content-center">
                        <div class="col-lg-11 align-items-center">
                            <div id="VuePage" class="container">
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-account"> 帳號</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="請輸入帳號(必填)" class="form-control" v-model.lazy.trim="Account" required>
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-lock"> 密碼</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" placeholder="請輸入密碼(必填)" class="form-control" v-model.lazy="Password" required minlength="8">
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-lock"> 密碼確認</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" placeholder="請再次輸入密碼(必填)" class="form-control" v-model.lazy="ComfirmPassword" required minlength="8">
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-account"> 聯絡人姓名</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="請輸入聯絡人姓名(必填)" class="form-control" v-model.lazy="ContactName" required>
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-account"> 公司名稱</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" placeholder="請輸入公司名稱" class="form-control" v-model.lazy="CompanyName">
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-receipt"> 統一編號</i>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="number" placeholder="請輸入統一編號(必填)" class="form-control" v-model.lazy="TaxId" required>
                                    </div>
                                </div>
                                <hr>
                                <div class="row justify-content-center">
                                    <div class="col-sm-2 align-self-center">
                                        <i class="zmdi zmdi-phone"> 傳真號碼</i>
                                    </div>
                                    <div class="col-sm-6">
