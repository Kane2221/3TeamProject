@section Head{
    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <style>
        .revise {
            border: 1;
        }

        .normal {
            border: 0;
        }
    </style>
}

    <div class="container-fluid page-header">
        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px">
                <h3 class="display-4 text-white text-uppercase">廠商資料</h3>
                <div class="d-inline-flex text-white">
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid booking mt-5 pb-5">
        <div class="container pb-5">
            <div class="bg-light shadow" style="padding: 30px;">
                <div class="row align-items-center" style="min-height: 500px;">

                    <div id="VuePage" class="row">
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img v-bind:src="PicturePath" alt="avatar"
                                     class="rounded-circle img-fluid" style="width: 150px;">
                                    <h5 class="my-3">{{CompanyName}}</h5>
                                    <h5 class="my-3">{{ContactName}}</h5>
                                    <div v-if="revise" class="d-flex justify-content-center mb-2">
                                        <input class="form-control" type="file" ref="file" @@change="fileSelected">
                                    </div>
                                    <div v-if="revise" class="d-flex justify-content-center mb-2">
                                        <button type="button" class="btn btn-primary ms-1" v-on:click="uploadPic">上傳照片</button>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-lg-0">
                                <div class="card-body p-0 ">
                                    <ul class="list-group list-group-flush rounded-3 ">
                                        <li class="list-group-item justify-content-between align-items-center p-3 ">
                                            <div class="d-flex justify-content-center mb-2">
                                                <button type="button" class="form-control btn btn-outline-primary ms-1">
                                                    <a data-toggle="click" href="/Supplier/OrderList"><i class="zmdi zmdi-card-giftcard">供應商品</i></a>
                                                </button>
                                            </div>
                                        </li>
                                        <li class="list-group-item justify-content-between align-items-center p-3">
                                            <div class="d-flex justify-content-center mb-2">
                                                <button type="button" class="form-control btn btn-outline-primary ms-1">
                                                    <a data-toggle="click" href="/Supplier/AddOrder"><i class="zmdi zmdi-plus-square"> 產品上架</i></a>
                                                </button>
                                            </div>
                                        </li>
                                        </li>
                                        <li class="list-group-item justify-content-between align-items-center p-3">
                                            <div class="d-flex justify-content-center mb-2">
                                                <button type="button" class="form-control btn btn-outline-primary ms-1">
                                                    登出
                                                    <i class="zmdi zmdi-arrow-right"></i>
                                                </button>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">帳號</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="Account" disabled/></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <template v-if="revise">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">密碼</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><input :class="change" type="password" v-model="Password" v-bind:disabled="isDisabled" /></p>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">確認密碼</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <p class="text-muted mb-0"><input :class="change" type="password" v-model="ComfirmPassword" v-bind:disabled="isDisabled" /></p>
                                            </div>
                                        </div>
                                        <hr>
                                    </template>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">聯絡人姓名</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="ContactName" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">公司名稱</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="CompanyName" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">統一編號</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="TaxId" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">傳真號碼</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="Fax" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">電子信箱</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="Email" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">手機號碼</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="CellPhoneNumber" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">公司電話號碼</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="SupplierPhoneNumber" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">郵遞區號</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="SupplierPostalCode" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">城市</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="SupplierCity" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">地址</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0"><input :class="change" v-model="SupplierAddress" v-bind:disabled="isDisabled" /></p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div v-if="isDisabled" class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-primary ms-1" v-on:click="reviseData">修改資料</button>
                                    </div>
                                    <div v-if="revise" class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-primary ms-1" v-on:click="cancel">取消</button>
                                        <button type="button" class="btn btn-primary ms-1" v-on:click="confirmData">確認修改</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                UserId:'',
                Account:'',
                Email: '',
                Password: '',
                ComfirmPassword: '',
                ContactName: '',
                CompanyName: '',
                TaxId: '',
                Fax: '',
                CellPhoneNumber: '',
                SupplierPhoneNumber: '',
                SupplierPostalCode: '',
                SupplierCountry: '台灣',
                SupplierCity:'',
                SupplierAddress: '',
                PicturePath: '',
                formdata: new FormData(),
                revise: false,
                isDisabled: true,
                change: "normal"
            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Suppliers/SupplierApi/GetSupplier'
                })
                .then(function (res) {
                    var r = res.data;
                    console.log(res);
                    self.UserId = r.userId;
                    self.Account = r.account;
                    self.Email = r.email;
                    self.Password = r.password;
                    self.ContactName = r.contactName;
                    self.CompanyName = r.companyName;
                    self.TaxId = r.taxId;
                    self.Fax = r.fax;
                    self.CellPhoneNumber = r.cellPhoneNumber;
                    self.SupplierPhoneNumber = r.supplierPhoneNumber;
                    self.SupplierPostalCode = r.supplierPostalCode;
                    self.SupplierCountry = r.supplierCountry;
                    self.SupplierCity = r.supplierCity;
                    self.SupplierAddress = r.supplierAddress;
                    self.PicturePath = r.picturePath;
                })
                .catch(function (error) {
                    console.log(error);
                });

            },
            methods: {
                logOut: function () {
                    axios({
                        method: 'delete',
                        url: '/Users/UserApi/Logout'
                    })
                        .then(function (res) {
                            console.log(res);
                        })
                        .catch(function (error) {
                            console.log(error);
                        });
                    window.location.assign("/home");
                },
                uploadPic: function () {
                    axios({
                        method: 'post',
                        url: '/Users/UserApi/UploadPicture',
                        heads: {
                            'Content-Type': 'multipart/form-data'
                        },
                        data: this.formdata,
                    })
                        .then(function (res) {
                            console.log(res);
                            Swal.fire({
                                title: '上傳照片成功',
                                icon: 'success',
                                timer: 12000
                            });
                        })
                        .catch(function (error) {
                            console.log(error);
                        });
                },
                fileSelected: function (e) {
                    this.formdata.append('UserPicFiles', e.target.files[0]);
                },
                reviseData: function () {
                    this.revise = true;
                    this.isDisabled = false;
                    this.change = "revise";
                },
                confirmData: function () {
                    this.revise = false;
                    this.isDisabled = true;
                    this.change = "normal";
                    let urls = `/Suppliers/SupplierApi/Update/${this.UserId}`;
                    axios({
                        method: 'put',
                        url: urls,
                        data: {
                            Email : this.Email,
                            Password : this.Password,
                            ContactName: this.ContactName,
                            CompanyName: this.CompanyName,
                            TaxId : this.TaxId,
                            Fax : this.Fax,
                            CellPhoneNumber: this.CellPhoneNumber,
                            SupplierPhoneNumber: this.SupplierPhoneNumber,
                            SupplierPostalCode: this.SupplierPostalCode,
                            SupplierCountry: this.SupplierCountry,
                            SupplierCity: this.SupplierCity,
                            SupplierAddress: this.SupplierAddress,
                        }
                    })
                        .then(function (response) {
                            self.Success = response.data;
                            Swal.fire({
                                title: self.Success,
                                icon: 'success',
                                timer: 12000
                            });
                            console.log(response);
                        })
                        .catch(function (error) {
                            self.ErrMsg = error.response.data;
                            Swal.fire({
                                title: '修改失敗',
                                icon: 'error',
                                timer: 12000
                            });
                            console.log(error);
                            return;
                        });
                },
                cancel: function () {
                    window.location.assign("/Supplier/Supplierprofile")
                    return;
                }
            }
        });

    </script>
    }