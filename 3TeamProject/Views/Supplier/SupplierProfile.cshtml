    @section scripts {
    <script>
        var VuePage = new Vue({
            el: "#VuePage",
            data: {
                Account:'',
                Email: '',
                Password: '',
                ComfirmPassword: '',
                ContactName: '',
                CompanyName: '',
                TaxId: '',
                Fax: '',
                CellPhoneNumber: '',
                SupplierPhoneNumber: '',
                PostalCode: '',
                Country: '台灣',
                City:'',
                Address: '',

            },
            mounted: function () {
                var self = this;
                axios({
                    method: 'get',
                    url: '/Suppliers/SupplierApi/GetSupplier'
                })
                    .then(function (res) {
                        var r = res.data;
                        console.log(res);
                        self.Account = r.account;
                        self.Email = r.email;
                        self.Password = r.password;
                        self.ContactName = r.contactName;
                        self.CompanyName = r.companyName;
                        self.TaxId = r.taxId;
                        self.Fax = r.fax;
                        self.CellPhoneNumber = r.cellPhoneNumber;
                        self.SupplierPhoneNumber = r.supplierPhoneNumber;
                        self.PostalCode = r.supplierPostalCode;
                        self.Country = r.supplierCountry;
                        self.City = r.supplierCity;
                        self.Address = r.supplierAddress;
                    })
                    .catch(function (error) {
                        console.log(error);
                    })

            }
        });

    </script>
    }